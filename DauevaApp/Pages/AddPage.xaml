<Page x:Class="DauevaApp.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DauevaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <StackPanel>
            <GroupBox Header="Вид авто" Margin="5">
                <ComboBox
                    Name="CmbAutoType"/>
            </GroupBox>
            <GroupBox Header="Модель авто" Margin="5">
                <TextBox
                    Name ="TxbAutoModel"/>
            </GroupBox>
            <GroupBox Header="Описание проблемы" Margin="5">
                <TextBox
                    Name="TxbPoblem"/>
            </GroupBox>
            <GroupBox Header="Клиент" Margin="5">
                <ComboBox
                    Name="CmbClient"/>
            </GroupBox>
            <Button Width="100" Height="25"
                    Name="BtnSave"
                    Content="Добавить"
                    Click="BtnSave_Click"
                    HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
